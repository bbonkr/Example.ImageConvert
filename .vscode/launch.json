    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Example.ImageConverter.App/bin/Debug/net7.0/Example.ImageConverter.App.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Example.ImageConverter.App",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "NETCORE_STAGE": "Development"
            },
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}